<% include ../partials/header %>


<div class="container">
  <div class="row">
    <h1 style='text-align: center;'>Create a New Adventuring Group!</h1>
    <div style='width: 30%; margin: 25px auto;'>
      <form action='/groups/<%= group._id %>/?_method=PUT' method='POST'>
        <div class="form-group">
          <input class='form-control' type="text" name='group[name]' value='<%= group.name %>' >
        </div>
        <div class="form-group">
          <input class='form-control' type="text" name='group[image]' value='<%= group.image %>'>
        </div>
        <div class="form-group">
          <input class='form-control' type="text" name="group[description]" value="" value='<%= group.description %>'>
        </div>
        <div class="form-group">
          <button class='btn btn-primary btn-lg btn-default btn-block'>Submit!</button>
        </div>
      </form>
      <a href="/groups">Go Back</a>
    </div>
  </div>

</div>


<% include ../partials/footer %>
